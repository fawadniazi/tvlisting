@import url("bootstrap.min.css");

/*-------------------------------------------- Global style ---------------------------------------------*/
ul 
	list-style: none

/*-------------------------------------------- Override ESPN template ---------------------------------------------*/

#wrapper-head, #wrapper-body, #wrapper-foot
	margin-left: 12px

#footer
	margin-left: 0

#logos
	margin-left: 0 !important

input[type="text"]
	border-radius: 0
	height: 15px
/*-------------------------------------------- Desktop style ---------------------------------------------*/

.espntv_desktop
	width: 925px;
	float: left;
	padding-left: 20px;

/*-------------------------------------------- Media queries ---------------------------------------------*/

@media all and (min-width: 480px) and (max-width: 900px)
	#header
		display: none